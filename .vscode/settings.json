{
  "files.associations": {
    "*.json5": "jsonc"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "./github/renovate.json",
        "./gitlab/renovate.json5"
      ],
      "url": "https://docs.renovatebot.com/renovate-schema.json"
    }
  ],

  "yaml.schemas": {
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
      "file:///c%3A/Users/Zak/code/projects/bloopyboii/.gitlab-ci.yml"
    ],
    "https://json.schemastore.org/taskfile.json": [
      "Taskfile.yaml",
      ".taskfiles/*.yaml"
    ],
    "http://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yaml"
    ],
    "https://squidfunk.github.io/mkdocs-material/schema.json": ["mkdocs.yml"]
  },
  "files.eol": "\n",
  "scm.alwaysShowRepositories": true,
  "git.alwaysSignOff": true,
  "git.autoStash": true,
  "[yaml]": {
    "editor.tabSize": 2
  },

  "prettier.configPath": ".ci/prettier/.prettierrc.yaml",
  "prettier.ignorePath": ".ci/prettier/.prettierignore",

  "yaml.customTags": [
    "!ENV scalar",
    "!ENV sequence",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"
  ],

  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast", "-c .github/lint/golangci.yaml"],
  "editor.formatOnSave": true,
  "go.vetOnSave": "off"
}
